{% comment %}
    The share buttons share the home page URL. The share text is grabbed from the store
    meta description.
{% endcomment %}

{% layout 'password' %}

<div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8 col-xl-6">
        <h2>{{ 'general.password_page.opening_soon' | t }}</h2>

        {% unless shop.password_message == blank %}
            <p>
                {{ shop.password_message }}
            </p>
        {% endunless %}

        <div class="row justify-content-center mt-4">
            <div class="col-12 col-md-8 col-xl-7">
                {% form 'customer' %}        
                    {% if form.posted_successfully? %}
                        <h4 class="text-center">{{ 'general.password_page.signup_form_success' | t }}</h4>
                    {% else %}
                        <h4>{{ 'general.password_page.signup_form_heading' | t }}</h4>
                        <div class="input-group mb-2">
                            <input type="hidden" name="contact[tags]" value="prospect, password page">
                            <input type="email" class="form-control" name="contact[email]" id="Email" spellcheck="false" autocomplete="off" autocapitalize="off" placeholder="{{ 'general.password_page.signup_form_email_placeholder' | t }}" />
                            <div class="input-group-append">
                                <button type="submit" name="commit" class="btn btn-tertiary">
                                    {{ 'general.password_page.signup_form_submit' | t }}
                                </button>
                            </div>
                        </div>
                    {% endif %}

                    {% if form.errors != blank %}
                        <div class="alert alert-danger" role="alert">
                            {{ form.errors | default_errors }}
                        </div>
                    {% endif %}
                {% endform %}
            </div>
        </div>

        {% if settings.social_facebook_share or settings.social_twitter_share %}
            <h6 class="mt-4">{{ 'general.password_page.spread_the_word' | t }}</h6>
            {% include 'social-sharing' %}
        {% endif %}
    </div>
</div>

<a href="#Login" class="toggle-password">
    {{ 'general.password_page.password_link' | t }} &rarr;
</a>